{% from 'components/navbar.jinja' import navbar %}
{% from 'components/footer.jinja' import footer %}

<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="{{ url_for('static', filename='css/output.css') }}" rel="stylesheet" />
  <title>LaptopFinder</title>
  <link rel="icon" type="image/x-icon" href="{{ url_for('static', filename='images/favicon.png') }}">
  <script>
    // On page load or when changing themes, best to add inline in `head` to avoid FOUC
    if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
    } else {
        document.documentElement.classList.remove('dark')
    }
  </script>
</head>

<body class="font-sans bg-white dark:bg-slate-900 text-slate-500 dark:text-slate-400">
  {{ navbar(navlinks) }}
  {% block body %}{% endblock %}
  {{ footer(navlinks) }}
  <script src="{{ url_for('static', filename='js/htmx-1.9.12.min.js') }}"></script>
  <script src="{{ url_for('static', filename='js/main.js') }}"></script>
</body>

</html>