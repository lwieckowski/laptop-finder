{% extends 'layout.jinja' %}

{% from 'features/filter.jinja' import filters, mobile_filters, mobile_filter_button %}
{% from 'features/sort.jinja' import sort_dropdown %}
{% from 'features/table.jinja' import table %}

{% block body %}
{{ mobile_filters() }}
<main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex items-baseline justify-between border-b border-gray-200 pb-6 pt-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Do gier</h1>
        <div class="flex items-center">
            {{ sort_dropdown() }}
            {{ mobile_filter_button() }}
        </div>
    </div>
    <div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-4">
        {{ filters() }}
        {{ table(laptops) }}
    </div>
</main>
{% endblock %}