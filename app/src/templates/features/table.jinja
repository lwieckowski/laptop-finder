
{% macro table(laptops, page, per_page, total, sort_order, last_sort_by) %}
<div class="lg:col-span-3">
    <div class="pb-4 bg-white dark:bg-slate-900">
        <label for="table-search" class="sr-only">Search</label>
        <div class="relative mt-1">
            <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-slate-500 dark:text-slate-400" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                </svg>
            </div>
            <input id="search" type="text" name="search"
                class="block pt-2 ps-10 text-sm text-slate-900 border border-slate-300 rounded-lg w-80 bg-slate-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:border-slate-600 dark:placeholder-slate-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                placeholder="Szukaj" hx-post="/laptops" hx-trigger="keyup changed delay:250ms" hx-target="#table-body"
                hx-include="#filters, #search, .sort, #last_sort_by">
        </div>
    </div>
    <div id="table-body" class="relative sm:rounded-lg mb-4">
        {% include 'features/table_body.jinja' %}
    </div>
</div>
{% endmacro %}

