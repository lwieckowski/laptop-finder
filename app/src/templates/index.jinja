        <h2 class="text-4xl font-extrabold dark:text-white">Laptopy do gier</h2>
        <div class="flex items-center">
            {{ mobile_filter_button() }}
        </div>
    </div>
    <div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-4">
        {{ sidebar_filters(filters) }}
        {{ table(laptops) }}
    </div>
</main>
{% endblock %}