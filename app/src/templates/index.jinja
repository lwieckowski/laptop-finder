{% extends 'layout.jinja' %}

{% from 'features/filter.jinja' import sidebar_filters, mobile_filters, mobile_filter_button %}
{% from 'features/table.jinja' import table %}
{% from 'features/chart.jinja' import chart %}

{% block body %}
{{ mobile_filters(filters) }}
<main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
