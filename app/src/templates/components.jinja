{% import 'filter.jinja' as filter %}

{% macro navlink(text, link) %}
<a href="{{ link }}" class="block mt-4 lg:inline-block lg:mt-0 underline decoration-dotted hover:no-underline mr-4">
    {{ text }}
</a>
{% endmacro %}

{% macro mobile_filter_offcanvas() %}
<div id="filter-offcanvas" class="relative z-40 lg:hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-black bg-opacity-25 transition-all"></div>
    <div class="fixed inset-0 z-40 flex">
        <div
            class="relative ml-auto flex h-full w-full max-w-xs flex-col overflow-y-auto bg-white py-4 pb-12 shadow-xl">

            <div class="flex items-center justify-between px-4">
                <h2 class="text-lg font-medium text-gray-900">Filtry</h2>
                <button id="filter-close" type="button"
                    class="-mr-2 flex h-10 w-10 items-center justify-center rounded-md bg-white p-2 text-gray-400">
                    <span class="sr-only">Zamknij filtry</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                        aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <form class="mt-4 px-4 border-t border-gray-200">
                <h3 class="sr-only">Filtry</h3>
                {{ filter.accordion("Producent", filter.checkboxes(["Apple", "Asus", "Lenovo"])) }}
                {{ filter.accordion("Ekran", filter.checkboxes(["11 cali", "13 cali", "15 cali"])) }}
                {{ filter.accordion("Dysk", filter.checkboxes(["128GB", "256GB", "512GB", "1TB"])) }}
            </form>
        </div>
    </div>
</div>
{% endmacro %}

{% macro sort_menu() %}
<div class="relative inline-block text-left">
    <div>
        <button id="sort-toggle" type="button"
            class="group inline-flex justify-center text-sm font-medium text-gray-700 hover:text-gray-900"
            id="menu-button" aria-expanded="false" aria-haspopup="true">
            Sortuj
            <svg class="-mr-1 ml-1 h-5 w-5 flex-shrink-0 text-gray-400 group-hover:text-gray-500" viewBox="0 0 20 20"
                fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd"
                    d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                    clip-rule="evenodd" />
            </svg>
        </button>
    </div>
    <div id="sort-menu"
        class="absolute hidden right-0 z-10 mt-2 w-40 origin-top-right rounded-md bg-white shadow-2xl ring-1 ring-black ring-opacity-5 focus:outline-none"
        role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
        <div class="py-1" role="none">
            <a href="#" class="font-medium text-gray-900 block px-4 py-2 text-sm" role="menuitem" tabindex="-1"
                id="menu-item-0">Cena</a>
            <a href="#" class="text-gray-500 block px-4 py-2 text-sm" role="menuitem" tabindex="-1"
                id="menu-item-1">Wydajność</a>
        </div>
    </div>
</div>
{% endmacro %}

{% macro mobile_filter_button() %}
<button id="filter-open" type="button" class="-m-2 ml-4 p-2 text-gray-400 hover:text-gray-500 sm:ml-6 lg:hidden">
    <span class="sr-only">Filters</span>
    <svg class="h-5 w-5" aria-hidden="true" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
            d="M2.628 1.601C5.028 1.206 7.49 1 10 1s4.973.206 7.372.601a.75.75 0 01.628.74v2.288a2.25 2.25 0 01-.659 1.59l-4.682 4.683a2.25 2.25 0 00-.659 1.59v3.037c0 .684-.31 1.33-.844 1.757l-1.937 1.55A.75.75 0 018 18.25v-5.757a2.25 2.25 0 00-.659-1.591L2.659 6.22A2.25 2.25 0 012 4.629V2.34a.75.75 0 01.628-.74z"
            clip-rule="evenodd" />
    </svg>
</button>
{% endmacro %}


{% macro filter_section() %}

<section aria-labelledby="filters-heading" class="pb-24 pt-6">
    <h2 id="filters-heading" class="sr-only">Filters</h2>
    <form class="hidden lg:block">
        {{ filter.accordion("Producent", filter.checkboxes(["Apple", "Asus", "Lenovo"])) }}
        {{ filter.accordion("Ekran", filter.checkboxes(["11 cali", "13 cali", "15 cali"])) }}
        {{ filter.accordion("Dysk", filter.checkboxes(["128GB", "256GB", "512GB", "1TB"])) }}
    </form>
</section>

{% endmacro %}